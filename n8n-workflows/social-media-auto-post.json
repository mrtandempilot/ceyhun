                        },
                        {
                            "name": "access_token",
                            "value": "={{ $credentials.accessToken }}"
                        }
                    ]
                },
                "options": {}
            },
            "id": "instagram-publish",
            "name": "Publish to Instagram",
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.2,
            "position": [
                1040,
                400
            ]
        },
        {
            "parameters": {
                "respondWith": "json",
