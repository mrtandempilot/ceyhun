        {
            "parameters": {
                "jsCode": "// Get blog post data from webhook\nconst post = $input.first().json;\n\n// Create Facebook post\nconst fbPost = `${post.title}\\n\\n${post.excerpt}\\n\\nRead more: ${post.url}\\n\\n#paragliding #oludeniz #turkey #adventure`;\n\n// Create Instagram caption (max 2200 chars)\nconst instaCaption = `${post.title}\\n\\n${post.excerpt}\\n\\nðŸ”— Link in bio\\n\\n#paragliding #oludeniz #turkey #adventure #travel #extremesports #flying #babadag`;\n\nreturn [\n  {\n    json: {\n      platform: 'facebook',\n      message: fbPost,\n      image_url: post.featured_image,\n      link: post.url\n    }\n  },\n  {\n    json: {\n      platform: 'instagram',\n      caption: instaCaption,\n      image_url: post.featured_image\n    }\n  }\n];"
            },
            "id": "format",
            "name": "Format for Social Media",
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                440,
                300
            ]
        },
        {
            "parameters": {
                "method": "POST",
                "url": "=https://graph.facebook.com/v18.0/{{ $credentials.pageId }}/photos",
                "authentication": "predefinedCredentialType",
                "nodeCredentialType": "facebookGraphApi",
                "sendQuery": true,
                "queryParameters": {
                    "parameters": [
                        {
                            "name": "url",
                            "value": "={{ $json.image_url }}"
                        },
                        {
                            "name": "message",
                            "value": "={{ $json.message }}"
                        },
                        {
                            "name": "link",
                            "value": "={{ $json.link }}"
                        },
                        {
                            "name": "access_token",
                            "value": "={{ $credentials.accessToken }}"
                        }
                    ]
                },
                "options": {}
            },
            "id": "facebook",
            "name": "Post to Facebook",
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.2,
            "position": [
                640,
                200
            ]
        },
        {
            "parameters": {
                "method": "POST",
                "url": "=https://graph.facebook.com/v18.0/{{ $credentials.instagramAccountId }}/media",
                "authentication": "predefinedCredentialType",
                "nodeCredentialType": "facebookGraphApi",
                "sendQuery": true,
