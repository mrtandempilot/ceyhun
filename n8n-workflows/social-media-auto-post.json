                        },
                        {
                            "name": "caption",
                            "value": "={{ $json.caption }}"
                        },
                        {
                            "name": "access_token",
                            "value": "={{ $credentials.accessToken }}"
                        }
                    ]
                },
                "options": {}
            },
            "id": "instagram-create",
            "name": "Create Instagram Media",
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.2,
            "position": [
                640,
                400
            ]
        },
        {
            "parameters": {
                "jsCode": "// Wait 30 seconds for Instagram to process media\nawait new Promise(resolve => setTimeout(resolve, 30000));\n\nconst media = $input.first().json;\nreturn {\n  json: {\n    creation_id: media.id\n  }\n};"
            },
            "id": "wait",
